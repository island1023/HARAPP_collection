<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <!-- 原始的 LinearLayout 现在被 ScrollView 包裹 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".MainActivity">

        <!-- 标题 -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="实时活动采集与识别"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- 采集活动标签 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="采集活动标签："
            android:textSize="16sp"
            android:textColor="#212121"/>

        <EditText
            android:id="@+id/et_custom_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入自定义标签 (例如: 走路-用户A)"
            android:inputType="text"
            android:text="新活动"
            android:background="@android:drawable/editbox_background"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:minHeight="48dp" tools:ignore="TouchTargetSizeCheck" />

        <!-- 实时活动状态卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="#E8EAF6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="模型识别结果："
                    android:textSize="18sp"
                    android:textColor="#3F51B5"/>

                <TextView
                    android:id="@+id/tv_current_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="等待开始..."
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="#FF9800"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 【修改】波形显示区域：使用自定义 View 代替 TextView 占位符 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="实时加速度波形："
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:layout_marginBottom="4dp"/>

        <com.example.harapp.WaveformView
            android:id="@+id/waveform_view"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:layout_marginBottom="16dp"/>


        <!-- 传感器数据显示区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原始传感器数据 (50Hz)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"/>

            <TextView
                android:id="@+id/tv_acc_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="monospace"
                android:text="加速度 (m/s²): X=0.00, Y=0.00, Z=0.00"
                android:textSize="14sp"
                android:textColor="#212121"/>

            <TextView
                android:id="@+id/tv_gyro_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="monospace"
                android:text="角速度 (rad/s): X=0.00, Y=0.00, Z=0.00"
                android:textSize="14sp"
                android:textColor="#212121"/>

            <TextView
                android:id="@+id/tv_sampling_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="monospace"
                android:text="实际频率: 0.00 Hz"
                android:textSize="14sp"
                android:textColor="#9E9E9E"/>

        </LinearLayout>

        <!-- 控制按钮 -->
        <Button
            android:id="@+id/btn_start_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始识别与采集 (50Hz)"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:padding="12dp"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btn_stop_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="停止服务"
            android:textColor="#FFFFFF"
            android:backgroundTint="#F44336"
            android:padding="12dp"
            android:textSize="18sp"
            android:enabled="false"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btn_export_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="导出采集数据"
            android:textColor="#FFFFFF"
            android:backgroundTint="#03A9F4"
            android:padding="12dp"
            android:textSize="18sp"
            android:enabled="false"/>

    </LinearLayout>
</ScrollView>